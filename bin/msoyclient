#!/bin/sh
#
# $Id$
#
# Command line launcher for the Msoy standalone client

BINDIR=`dirname $0`
HOST=`egrep ^server_host $BINDIR/../server.properties | awk '{print $3}'`

PLAYER="flashplayer-debug"
if [ "$1" = "-nodebug" ]; then
    PLAYER="flashplayer"
    shift
fi
$BINDIR/`uname`/$PLAYER http://$HOST:8080/clients/world-client.swf?$1
