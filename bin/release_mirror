#!/bin/sh
#
# $Id$
#
# Mirrors MetaSOY server runtime files to the appropriate server machines 

MIRROR=/export/tools/bin/mirror
ROOT=`dirname $0 | sed s:/bin$::`
cd $ROOT

# mirror the code
echo "** Mirroring jar files..."
$MIRROR dist/*.jar dist/lib/*.jar dist/lib/*/lib*.so

# mirror the configuration files
echo "** Mirroring configuration files..."
$MIRROR server.conf *.properties build.xml log/README

# mirror the server scripts
echo "** Mirroring scripts..."
$MIRROR `find bin -perm 0775 -a -type f`
