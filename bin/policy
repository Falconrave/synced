#!/bin/sh
#
# $Id$
#
# Startup script for the Flash security policy server.

WHOAMI=`whoami`
if [ "$WHOAMI" != "root" ]; then
    echo "This script must be run as root."
    exit 255
fi

MSOY_HOME=`dirname $0`/..
MSOY_HOME=`cd $MSOY_HOME ; pwd`
if [ ! -f $MSOY_HOME/server.conf ]; then
    echo "Unable to infer MSOY_HOME. No server.conf file?"
    exit 1
fi

# Read in our configuration
. $MSOY_HOME/server.conf

# See how we were called
case "$1" in
  start)
        # Make sure policyrespawn is not currently running
        if [ -f $MSOY_HOME/run/respawn-policy.pid ]; then
            echo "policyrespawn appears to be already running."
            echo "Run '$0 stop' to stop it first."
            exit 1
        fi

        # Make sure there are no hung policy server processes
        SERVER_PIDFILE=$MSOY_HOME/run/server-policy.pid
        if [ -f $SERVER_PIDFILE ]; then
            PID=`cat $SERVER_PIDFILE`
            RPIDS=`ps auxww | grep " $PID " | grep java | awk '{ print $2 }' | \
                sort -n | head -1`
            if [ ! -z "$RPIDS" ]; then
                echo "WARNING: A policy server process is currently running."
                echo "If it has failed and you wish to forcibly restart it, please"
                echo "execute the following commands:"
                echo ""
                echo "% kill -QUIT $RPIDS"
                echo "% kill -KILL $RPIDS"
                echo ""
                echo "And then rerun this script."
                exit 255
            fi
        fi

        # Go ahead and start things up
        DAEMON=$MSOY_HOME/bin/policyrespawn
        RESPAWN_PIDFILE=$MSOY_HOME/run/respawn-policy.pid
        SERVER_PIDFILE=$MSOY_HOME/run/server-policy.pid
        LOGFILE=$MSOY_HOME/log/respawn-policy.log
        echo -n "Starting $DAEMON: "
        touch $RESPAWN_PIDFILE $LOGFILE
        chown $MSOY_USER $RESPAWN_PIDFILE $LOGFILE
        $DAEMON $RESPAWN_PIDFILE $SERVER_PIDFILE >>$LOGFILE 2>&1 </dev/null &
        echo "started."
        ;;

  stop)
        RESPAWN_PIDFILE=$MSOY_HOME/run/respawn-policy.pid
        SERVER_PIDFILE=$MSOY_HOME/run/server-policy.pid
        if [ ! -f $RESPAWN_PIDFILE ]; then
            echo "No $RESPAWN_PIDFILE exists. Is policyrespawn running?"
        else
            echo -n "Shutting down policy server, "
            kill -INT `cat $SERVER_PIDFILE`
            echo -n "policyrespawn: "
            kill `cat $RESPAWN_PIDFILE`
            echo "stopped."
            rm -f $RESPAWN_PIDFILE $SERVER_PIDFILE
        fi
        ;;

  unspawn)
        RESPAWN_PIDFILE=$MSOY_HOME/run/respawn-policy.pid
        if [ ! -f $RESPAWN_PIDFILE ]; then
            echo "No $RESPAWN_PIDFILE exists. Is policyrespawn running?"
        else
            echo -n "Shutting down policyrespawn: "
            kill `cat $RESPAWN_PIDFILE`
            echo "stopped."
            rm -f $RESPAWN_PIDFILE
        fi
        ;;

  restart)
        echo -n "Restart the server using the etc/rc.d script." 
        exit 1
        ;;

  *)
        echo "Usage: $0 {start|stop|unspawn|restart}"
        exit 1
esac

exit 0
