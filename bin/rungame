#!/bin/sh
#
# $Id$
#
# Runs a game hosting server.

NAME=msoy
DESC="MetaSOY game server"

MSOY_HOME=`dirname $0 | sed s:/bin$::`
HOSTNAME=`hostname`

# Make sure our game id and port were properly supplied.
if [ -z "$1" -o -z "$2" ]; then
    echo "Usage: $0 listenPort connectPort"
    exit 255
fi
LISTEN_PORT=$1
CONNECT_PORT=$2

LOGFILE=$MSOY_HOME/log/stdout-p$LISTEN_PORT.log
LOG_EMAIL=nightly-logs@threerings.net

# Override settings with those from MSOY_HOME/server.conf
if [ -f $MSOY_HOME/server.conf ]; then
    . $MSOY_HOME/server.conf
else
    echo "Can't load $MSOY_HOME/server.conf; can't run server."
    exit 255
fi

CLASS=com.threerings.msoy.game.server.MsoyGameServer
JAVA_ARGS="-server \
    -Dhostname=$HOSTNAME \
    -Dresource_dir=$MSOY_HOME/rsrc \
    -Drsrc_cache_dir=/tmp \
    -Djava.security.manager -Djava.security.policy=$MSOY_HOME/dist/security.policy \
    -Djava.rmi.server.hostname=$HOSTNAME \
    -Djava.util.logging.config.file=$MSOY_HOME/dist/logging.properties"

# make sure we have a JVM and set up our classpath and bits
. $MSOY_HOME/bin/runcommon

# Create the logfile
touch $LOGFILE

# Start up the server
echo "Running MetaSOY game server: $LISTEN_PORT" >>$LOGFILE
echo " Deployment root: $MSOY_HOME" >>$LOGFILE
echo "         Java VM: $JAVA_VM" >>$LOGFILE
echo "       Java args: $JAVA_ARGS" >>$LOGFILE
echo "    Server class: $CLASS" >>$LOGFILE

$JAVA_VM $JAVA_ARGS $CLASS $LISTEN_PORT $CONNECT_PORT >>$LOGFILE 2>&1
EXIT_CODE=$?

# Mail out warnings from the logs
FILTLOG=`mktemp /tmp/msoyfiltered-$LISTEN_PORT.log.XXXXXX` || exit 1
cat $LOGFILE | $MSOY_HOME/tools/bin/lfilter > $FILTLOG
if [ -s $FILTLOG ]; then
    cat $FILTLOG | $MAIL -s "$HOSTNAME: $MSOY_HOME p$LISTEN_PORT filtered log" $LOG_EMAIL
fi
rm -f $FILTLOG

# Archive the server log
NOW=`date "+%F-%H:%M"`
mv $LOGFILE $LOGFILE.$NOW

# Prune old logs
find $MSOY_HOME/log -name 'stdout-$NODE.log*' -a -mtime +7 | xargs rm -f

exit $EXIT_CODE
