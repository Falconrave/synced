<module>
  <inherits name="com.google.gwt.user.User"/>
  <inherits name="com.google.gwt.i18n.I18N"/>

  <source path="org/gwtwidgets/client"/>
  <source path="com/samskivert/text"/>
  <source path="com/threerings/io"/>
  <source path="com/threerings/util"/>
  <source path="com/threerings/presents/dobj"/>
  <source path="com/threerings/gwt/ui"/>
  <source path="com/threerings/gwt/util"/>

  <source path="com/threerings/msoy/data/all"/>
  <source path="com/threerings/msoy/web/data"/>
  <source path="com/threerings/msoy/web/client"/>

  <source path="client/util"/>
  <source path="client/ui"/>
  <source path="client/images"/>
  <source path="client/shell"/>

  <!-- this directory doesn't exist, but if we don't specify something, GWT helpfully -->
  <!-- decides to copy the entire directory into every single page that inherits from this -->
  <!-- definition. Thanks guys! -->
  <public path="public/page"/>

  <stylesheet src="/css/global.css"/>
  <stylesheet src="/css/gwt.css"/>
  <stylesheet src="/css/page.css"/>

  <replace-with class="com.threerings.gwt.ui.WidgetUtilImplMozilla">
    <when-type-is class="com.threerings.gwt.ui.WidgetUtilImpl"/>
    <any>
      <when-property-is name="user.agent" value="gecko"/>
      <when-property-is name="user.agent" value="gecko1_8"/>
    </any>
  </replace-with>

  <replace-with class="com.threerings.gwt.ui.WidgetUtilImplIE6">
    <when-type-is class="com.threerings.gwt.ui.WidgetUtilImpl"/>
    <any>
      <when-property-is name="user.agent" value="ie6"/>
    </any>
  </replace-with>

  <generate-with class="com.threerings.gwt.rebind.MessagesLookupGenerator">
    <when-type-assignable class="com.threerings.gwt.util.MessagesLookup" />
  </generate-with>
</module>
