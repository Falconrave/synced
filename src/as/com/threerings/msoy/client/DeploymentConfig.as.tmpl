package com.threerings.msoy.client {

    // -- Auto-generated build configuration class --
    public class DeploymentConfig {
        public static const buildTime :String = "@build_time@";
        public static const version :String = "@build_version@";
        public static const serverURL :String = "@server_url@";
        public static const serverHost :String = "@server_host@";
        public static const serverPorts :Array = [ @server_ports@ ];
        public static const socketPolicyPort :Array = [ @socket_policy_port@ ];
        public static const devDeployment :Boolean = @dev_deployment@;
        public static const mediaURL :String = "@media_url@";
        public static const staticMediaURL :String = "@static_media_url@";
        public static const logLevelsConfig :String = "@log_levels_config@";

        /** Are bars (and bling) yet enabled on this server? */
        public static const barsEnabled :Boolean = @dev_deployment@;

        private static function staticInit () :void
        {
            if (-1 != mediaURL.indexOf(serverHost)) {
                trace("\n\n====\n" +
                    "WARNING! WARNING!\n" +
                    "To properly test whirled, you need to have your media loaded " +
                    "from a different address than the server. Try setting the media_url " +
                    "in your msoy-server.properties to the IP address of your server." +
                    "\n====\n\n");
            }
        }
        staticInit();
    }
}
