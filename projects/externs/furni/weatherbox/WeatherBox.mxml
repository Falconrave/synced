<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*"
    layout="absolute" styleName="plain"
    verticalScrollPolicy="off" horizontalScrollPolicy="off"
    width="100%" height="100%"
    applicationComplete="logic.init(state, stations, contentBox);">
<mx:VBox>
  <mx:HBox>
     <mx:ComboBox id="state" prompt="Select state"/>
     <mx:ComboBox id="stations" prompt="Select station"/>
  </mx:HBox>
  <mx:HBox id="contentBox"/>
</mx:VBox>
<WeatherLogic id="logic"/>
</mx:Application>
