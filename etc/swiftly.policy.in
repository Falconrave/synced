// a Java security policy file used to sandbox the Flex compiler when building Swiftly projects
grant {
    // Properties used by the Flex compiler.
    permission java.util.PropertyPermission "AS3", "read, write";
    permission java.util.PropertyPermission "SWF", "read, write";
    permission java.util.PropertyPermission "JVM", "read, write";
    permission java.util.PropertyPermission "ES4", "read, write";
    permission java.util.PropertyPermission "ES3", "read, write";
    permission java.util.PropertyPermission "E4X", "read, write";
    permission java.util.PropertyPermission "AVMPLUS", "read, write";
    permission java.util.PropertyPermission "flex.swf.uncompressed", "read";
    permission java.util.PropertyPermission "trace.*", "read";

    // Read access to a few built in JVM properties.
    permission java.util.PropertyPermission "application.home", "read";
    permission java.util.PropertyPermission "user.dir", "read";
    permission java.util.PropertyPermission "user.home", "read";

    // Read access to the entire public Whirled SDK
    permission java.io.FilePermission "@PREFIX@/data/swiftly/whirled_sdk", "read";
    permission java.io.FilePermission "@PREFIX@/data/swiftly/whirled_sdk/-", "read";

    // Read access to portions of the Flex SDK
    permission java.io.FilePermission "@PREFIX@/data/swiftly/flex_sdk/frameworks", "read";
    permission java.io.FilePermission "@PREFIX@/data/swiftly/flex_sdk/frameworks/-", "read";
    permission java.io.FilePermission "@PREFIX@/data/swiftly/flex_sdk/lib", "read";
    permission java.io.FilePermission "@PREFIX@/data/swiftly/flex_sdk/lib/*", "read";

    // Read/write access to the temporary build directories. Not the base directory however.
    permission java.io.FilePermission "@PREFIX@/data/swiftly/build/-", "read, write";

    // Provides access to the declared members of a class. Needed by the Flex compiler.
    permission java.lang.RuntimePermission "accessDeclaredMembers";
};
